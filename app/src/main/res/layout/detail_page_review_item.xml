<?xml version="1.0" encoding="utf-8"?>
 <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/reviews_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_margin_top"

        card_view:cardBackgroundColor="@color/medium_grey"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_text_margin_left"
            android:layout_marginRight="@dimen/detail_text_margin_left">

    <TextView
        android:id="@+id/author"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/review_title_margin_top"
        android:layout_marginBottom="@dimen/review_title_margin_bottom"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tmp_large_content"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/content_margin_bottom"
        android:ellipsize="end"
        android:maxLines="3"/>

        </LinearLayout>

</android.support.v7.widget.CardView>

